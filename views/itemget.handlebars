<div class="container">
    <div class="row" id="pwd-container">
        <div class="col-md-4"></div>

        <div class="col-md-4">
            <section class="form">
                <form method="post" action="/item/{{item.id}}/get">
                    {{#if isowner}}
					{{#if wanter}}
					<h2>Give to {{wanter.username}}</h2>
					{{else}}
					<h2>You own it!  </h2>
					{{/if}}
					{{else}}
					<h2>Waiting for a confirmation from the item's current owner</h2>
					{{/if}}
                    {{#if error}} 
                    <div class="alert alert-danger alert-dismissible" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <strong>Error! </strong>{{ error }}
                    </div>
                    {{/if}}                    
					{{#if isowner}}
					{{#if wanter}}
					<button type="submit" name="confirm" value="true" class="btn btn-lg btn-primary btn-block">Confirm give</button>
					<button type="submit" name="confirm" value="false" class="btn btn-lg btn-danger btn-block">Cancel give</button>
                    <div class="item-tools">
						<a href="/messaging#{{wanter.username}}">Arrange meeting with {{wanter.name}}</a>
					</div>
					{{/if}}
					{{else}}
                    <a href="" class="btn btn-lg btn-primary btn-block">Come back to check for status</a>
                    <div class="item-tools">
						<a href="/messaging#{{item.user.username}}">Arrange meeting with {{item.user.name}}</a>
					</div>
					{{/if}}
                </form>

            </section>  
        </div>
        <div class="col-md-4"></div>
    </div>  
